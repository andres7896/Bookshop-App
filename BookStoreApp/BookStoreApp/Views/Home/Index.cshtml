
@{
    ViewBag.Title = "Bookstore App";
}

<body>
    <h2>Welcome to Andrew's Bookstore</h2>

    <section class="container my-5 py-5">

        <div class="row mx-5 px-5">

            <article class="col-md-6 d-flex justify-content-center">

                <button class="btn btn-outline-primary w-100 fs-5" onclick='window.location.href = "@Url.Action("Index", "Book", routeValues: null)"'>
                    <i class="bi bi-book"></i> <p>Books</p>
                </button>

            </article>

            <article class="col-md-6 d-flex justify-content-center">

                <button class="btn btn-outline-primary w-100 fs-5" onclick='window.location.href = "@Url.Action("Index", "Author", routeValues: null)"'>
                    <i class="bi bi-pen"></i> <p>Authors</p>
                </button>

            </article>

        </div>

    </section>

</body>

