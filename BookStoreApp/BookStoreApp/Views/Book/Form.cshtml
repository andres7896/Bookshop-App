
@{
    var res = TempData["Result"];
    ViewBag.Title = "Add book";
}

<body>

    <h2>Add book</h2>
    <hr />
    <form class="row" method="post" action="/Book/Form">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="titleInput" name="Title" placeholder="Title">
                <label for="titleInput">Title</label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="yearInput" name="Year" placeholder="1900">
                <label for="yearInput">Book year</label>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="genderInput" name="Gender" placeholder="M/F">
                <label for="genderInput">Gender</label>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="pageNumbersInput" name="PagesNumber" placeholder="0">
                <label for="pageNumbersInput">Pages number</label>
            </div>
        </div>
        <div class="col-md-10">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="authorInput" name="AuthorQuery" placeholder="Author">
                <label for="authorInput">Author</label>
            </div>
        </div>
        <div class="col-md-12 d-flex justify-content-center align-content-center">
            <button class="btn btn-outline-success">
                Agregar
            </button>
        </div>
    </form>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="@(res != null ? "toast fade show" : "toast")" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <div class="bg-warning rounded-2"></div>
                <strong class="me-auto">Alerta</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @res
            </div>
        </div>
    </div>

</body>

