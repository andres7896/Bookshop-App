
@{
    var res = TempData["Result"];
    ViewBag.Title = "Add Author";
}

<body>

    <h2>Add Author</h2>
    <hr />
    <form class="row" method="post" action="/Author/Form">
        <div class="col-md-8">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="fullnameInput" name="FullName" placeholder="Full name">
                <label for="fullnameInput">Full name</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-floating mb-3">
                <input type="date" class="form-control" id="birthDateInput" name="BirthDate" placeholder="01/01/1900">
                <label for="birthDateInput">Birth date</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="cityInput" name="CityOrigin" placeholder="01/01/1900">
                <label for="cityInput">City origin</label>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="emailInput" name="Email" placeholder="name@example.com">
                <label for="emailInput">Email address</label>
            </div>
        </div>
        <div class="col-md-12 d-flex justify-content-center align-content-center">
            <button class="btn btn-outline-success">
                Agregar
            </button>
        </div>
    </form>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="liveToast" class="@(res != null ? "toast fade show" : "toast")" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <div class="bg-warning rounded-2"></div>
                <strong class="me-auto">Alerta</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @res
            </div>
        </div>
    </div>

</body>

